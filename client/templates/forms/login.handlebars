<div class="dialog-background">
  <div class="login-dialog">
    <form class="login-form" action="" method="">
      <span style="float: right;">
        <img data-action="close-dialog" src="icons/16/cross.png" alt="Fermer" />
      </span>

      <header>
        <h1>Connexion</h1>
      </header>

      <p class="errors"></p>

      <p>
        <input type="text" maxLength="255" id="email" name="user[email]" placeholder="Adresse email" />
      </p>
      <p>
        <input type="password" maxLength="255" id="password" name="user[password]" placeholder="Mot de passe" />
      </p>
      <p>
        <input type="checkbox" id="persist" name="persist" />
        <label for="persist">Se souvenir de moi</label>
      </p>
      <p class="form-actions">
      </p>
    </form>

    <hr />

    <p>
      Pas encore inscrit ? L'inscription est gratuite !
    </p>
    <p>
      <a class="button dark" data-action="register">
        <img src="icons/16/user-silhouette.png"/>
        S'inscrire
      </a>
    </p>
  </div>
</div>

